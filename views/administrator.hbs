        <div class="container">
          <div class="card-body p-4">
          <div class="text-center">
            <div class="h1 fw-bolder">Create article</div>
            <p class="mb-4 text-muted">*Authority to create or update articles is restricted to Administrators</p>
          </div>

          <!-- * * * * * * * * * * * * * *
          // * * SB Forms Contact Form * *
          // * * * * * * * * * * * * * * *

          // This form is pre-integrated with SB Forms.
          // To make this form functional, sign up at
          // https://startbootstrap.com/solution/contact-forms
          // to get an API token!
          -->

          <form name="myForm" action="/create" enctype="application/x-www-form-urlencoded" method="post">
        <div class="container bg-light">
            <div class="row text-center">
                <div class="p-3 col-sm-12 col-md-12">
                    <label for="title" class="form-label">Title: </label>
                    <input type="text" name="title" id="title" placeholder="title" value="" autofocus="" required>
                </div>
                <div class="p-3 col-sm-12 col-md-12">
                    <label for="date" class="form-label">Date: </label>
                    <input type="text" name="date" id="date" placeholder="date" value="" autofocus="" required>
                </div>
                 <div class="p-3 col-sm-12 col-md-12">
                    <label for="image">Image:</label>
                    <input list="images" id="image" name="image" required><br><br>
                    <datalist id="images">
                        <option value="book.jpg">
                        <option value="car.jpg">
                        <option value="building.jpg">
                        <option value="galaxy.jpg">
                    </datalist>
                </div>
                <div class="p-3 col-sm-12 col-md-12">
                    <label for="content" class="form-label">Content: </label>
                    <textarea name="content" class="form-control" id="content" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
        </div>
    </form>
          <!-- End of contact form -->

        </div><hr class="my-0"> <br>


        <div class="text-center">
            <div class="h1 fw-bolder">Blogs To Read</div>
            <p class="mb-4 text-muted">*Authority to create articles is restricted to Administrators</p>
          </div>
        {{#each title}}
        <div class="card mb-4">
                        <a href="#!"><img class="card-img-top" src="{{this.image}}" alt="..."></a>
                        <div class="card-body">
                            <div class="small text-muted">{{this.date}}</div>
                            <h2 class="card-title">{{this.title}}</h2>
                              <form action="/admin_article" method="post">
              <input type="hidden" name="content" id="content" value="{{this.content}}">
              <input type="hidden" name="title" id="title" value="{{this.title}}">
              <button type="submit" class="btn btn-primary">Read OR Update â†’</button>
            </form>
                        </div>
                    </div>
 {{/each}}
                    <nav aria-label="Pagination">
                        <hr class="my-0">
                        <ul class="pagination justify-content-center my-4">
                            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                            <li class="page-item"><a class="page-link" href="#!">2</a></li>
                            <li class="page-item"><a class="page-link" href="#!">3</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                            <li class="page-item"><a class="page-link" href="#!">15</a></li>
                            <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                        </ul>
                    </nav>
        </div>
