               <section class="h-100 h-custom gradient-custom-2">
                        <div class="container py-5 h-100">
                          <div class="row d-flex justify-content-center align-items-center h-100">
                            <form name="myForm" action="/registration" enctype="application/x-www-form-urlencoded" method="post">
          <div class="container bg-light">
              <div class="row text-center">
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="firstname" class="form-label">First Name: </label>
                      <input type="text" name="firstname" id="firstname" placeholder="" value="{{data.firstname}}" autofocus="">
                      {{#unless data.firstname}}
                       <div style="color:red;">
                        Field cannot be empty.                   
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="lastname" class="form-label">Last Name: </label>
                      <input type="text" name="lastname" id="lastname" placeholder="" value="{{data.lastname}}">
                      {{#unless data.lastname}}
                    <div style="color:red;">
                        Field cannot be empty.
                        
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="userrname" class="form-label">username: </label>
                      <input type="text" name="username" id="username" placeholder="" value="{{data.username}}">
                      {{#unless data.username}}
                    <div style="color:red;">
                        Field cannot be empty.
                        
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="phone" class="form-label">Phone Number: </label>
                      <input type="tel" name="phonenumber" id="phone" placeholder="" value="{{data.phonenumber}}">
                       {{#unless data.phonenumber}}
                    <div style="color:red;">
                        Field cannot be empty.
                       </div>
                    {{/unless}}
                      {{#unless data.phonenumtest}}
                    <div style="color:red;">
                        Phone number is not valid.
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="Address" class="form-label">Address: </label>
                      <input type="address" name="Address" id="Address" placeholder="" value="{{data.Address}}">
                       {{#unless data.Address}}
                    <div style="color:red;">
                        Field cannot be empty.
                      
                    </div>
                    {{/unless}}
                  </div>
                  
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="city" class="form-label">City: </label>
                      <input type="city" name="city" id="city" placeholder="" value="{{data.city}}">
                        {{#unless data.city}}
                    <div style="color:red;">
                        Field cannot be empty.
                    
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="postalcode" class="form-label">Postal Code: </label>
                      <input type="postalcode" name="postalcode" id="postalcode" placeholder="" value="{{data.postalcode}}">
                       {{#unless data.postalcode}}
                    <div style="color:red;">
                        Field cannot be empty.
                       
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="country" class="form-label">Country: </label>
                      <input type="country" name="country" id="country" placeholder="" value="{{data.country}}">
                     {{#unless data.country}}
                    <div style="color:red;">
                        Field cannot be empty.
                      
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="password" class="form-label">Password: </label>
                      <input type="password" name="password" id="password" placeholder="" value="{{data.password}}">
                       {{#unless data.password}}
                    <div style="color:red;">
                        Field cannot be empty.
                      
                    </div>
                    {{/unless}}
                  </div>
                  <div class="p-3 col-sm-12 col-md-6">
                      <label for="confirmpassword" class="form-label">Confirm your Password</label>
                      <input type="password" name="confirmpassword" id="confirmpassword" placeholder="" value="{{data.confirmpassword}}">
                        {{#unless data.confirmpassword}}
                    <div style="color:red;">
                        Field cannot be empty.
                    </div>
                    {{/unless}}
                       {{#unless data.test}}
                    <div style="color:red;">
                       Passwords do not match, Try Again.
                    </div>
                    {{/unless}}
                  </div>
                  <div>
                      <button type="submit" class="btn btn-primary">Register</button>
                  </div>
              </div>
          </div>
      </form>
